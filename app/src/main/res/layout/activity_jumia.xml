<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jumia"
    android:background="@color/gray"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="481dp"
        android:background="@color/white"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/image" />
    </LinearLayout>


    <GridLayout

        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="8dp"
        android:background="@color/white"
        android:columnCount="4"
        android:padding="15dp"
        android:rowCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.019">

        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circleImageMall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape"
                android:padding="4dp"
                android:src="@drawable/bag_item" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Jumia Mall"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circleImageGlobal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape_bleu"
                android:padding="12dp"
                android:src="@drawable/airplane_50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Jumia Global"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circleImagePrime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape_orange"
                android:padding="10dp"
                android:src="@drawable/star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Jumia Prime"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circleImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape_green"
                android:padding="8dp"
                android:src="@drawable/cellphone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Airtime &amp; Bill"
                android:textStyle="bold" />
        </LinearLayout>


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <!-- Add your child views here -->

        <androidx.cardview.widget.CardView
            android:id="@+id/myCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"

            >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="2"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DEALS OF THE DAY"
                        android:textColor="@color/white"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="SEE ALL"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/click_32" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="23h : 27m : 58s left"

                        android:textColor="@color/white"
                        android:textSize="25dp"

                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:id="@+id/imageProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_marginVertical="5dp"
                            android:src="@drawable/image2"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imageProduct"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:padding="10dp"
                            android:text="-29%"
                            android:background="#E2F1DBD7"
                            android:textColor="#a45149"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/titeProduct1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageProduct"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:text="Smoother Gliding Steam lr.." />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/titeProduct1"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:text="2,490"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:id="@+id/imageProduct2"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_marginVertical="5dp"
                            android:src="@drawable/tshirt"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imageProduct2"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:padding="10dp"
                            android:text="-29%"
                            android:background="#E2F1DBD7"
                            android:textColor="#a45149"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/titeProduct2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageProduct2"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:text="Smoother Gliding Steam lr.." />

                        <TextView
                            android:id="@+id/price2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/titeProduct2"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:text="5,656"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:id="@+id/imageProduct3"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_marginVertical="5dp"
                            android:src="@drawable/image2"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imageProduct3"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:padding="10dp"
                            android:text="-29%"
                            android:background="#E2F1DBD7"
                            android:textColor="#a45149"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/titeProduct3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageProduct3"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:text="Smoother Gliding Steam lr.." />

                        <TextView
                            android:id="@+id/price3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/titeProduct3"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:text="2,490"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:id="@+id/imageProduct4"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_marginVertical="5dp"
                            android:src="@drawable/tshirt"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imageProduct4"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="#E2F1DBD7"
                            android:textColor="#a45149"
                            android:padding="10dp"
                            android:text="-29%"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/titeProduct4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageProduct4"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:text="Smoother Gliding Steam lr.." />

                        <TextView
                            android:id="@+id/price4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/titeProduct4"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:text="2,490"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </LinearLayout>

            </GridLayout>


            <!-- Your existing LinearLayout or other views go here -->
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>