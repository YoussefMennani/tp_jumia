<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jumia"
    android:background="@color/gray"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="481dp"
        android:background="@color/white"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/image" />
    </LinearLayout>


    <GridLayout

        android:layout_margin="5dp"
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:columnCount="4"
        android:padding="15dp"
        android:rowCount="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.065">

        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circleImageMall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape"
                android:padding="4dp"
                android:src="@drawable/bag_item"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Jumia Mall"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circleImageGlobal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape_bleu"
                android:padding="12dp"
                android:src="@drawable/airplane_50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Jumia Global"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circleImagePrime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape_orange"
                android:padding="10dp"
                android:src="@drawable/star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Jumia Prime"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circleImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape_green"
                android:padding="8dp"
                android:src="@drawable/cellphone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Airtime &amp; Bill"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />
        </LinearLayout>




    </GridLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"

        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        tools:layout_editor_absoluteX="0dp">

        <!-- Add your child views here -->

        <androidx.cardview.widget.CardView
            android:id="@+id/myCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"

            >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="2"
                android:columnCount="1"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="5dp"
                    android:background="@color/red"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DEALS OF THE DAY"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="1"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SEE ALL"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="end"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:background="@color/red"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/click_32"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="23h : 27m : 58s left"
                        android:textColor="@color/white"

                        android:layout_weight="1"
                        android:textSize="25dp"

                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/gray"
                    >

                    <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:layout_marginRight="1dp"

                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="150dp"
                                    android:src="@drawable/tshirt"
                                    android:id="@+id/imageProduct"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignEnd="@+id/imageProduct"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="#80FF0000"
                                    android:padding="10dp"
                                    android:text="-29%"
                                    android:textStyle="bold"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Smoother Gliding Steam lr.."
                                    android:gravity="center"
                                    android:id="@+id/titeProduct1"
                                    android:layout_below="@+id/imageProduct"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="2,490"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:id="@+id/price"
                                    android:layout_below="@+id/titeProduct1"
                                    />
                            </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_marginRight="1dp"

                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:src="@drawable/image2"
                            android:id="@+id/imageProduct"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/imageProduct"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="#80FF0000"
                            android:padding="10dp"
                            android:text="-29%"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Smoother Gliding Steam lr.."
                            android:gravity="center"
                            android:id="@+id/titeProduct1"
                            android:layout_below="@+id/imageProduct"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2,490"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:id="@+id/price"
                            android:layout_below="@+id/titeProduct1"
                            />
                    </RelativeLayout>



                </LinearLayout>


            </GridLayout>



            <!-- Your existing LinearLayout or other views go here -->
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>